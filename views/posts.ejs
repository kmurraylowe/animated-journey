<%- include('partials/header') %>

<h1>Posts</h1>
<ul>
	<% posts.forEach( el => { %>
	<li class="postItem" data-id="<%=el._id%>">
		<p class="likes"><%= el.likes%></p>
		<p><%= el.title %></p>
		<p><%= el.caption %></p>
		<p><%= el.user.userName %></p>

		<button class="like">like</button>
		<button class="del">Delete</button>
	</li>
	<% }) %>
</ul>

<form action="/posts/createPost" method="POST">
	<div>
		<label for="title">Title</label>
		<input type="text" placeholder="Project Title" name="title" id="title" />
	</div>
	<div>
		<label for="caption">Caption</label>
		<textarea name="caption" id="caption"></textarea>
	</div>
	<input type="submit" value="Submit" />
</form>

<a href="/logout">Logout</a>
<a href="/profile/<%=user.id%>">Go to profile</a>

<%- include('partials/footer') %>
